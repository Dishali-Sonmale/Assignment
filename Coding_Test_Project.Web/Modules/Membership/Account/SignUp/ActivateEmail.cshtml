@model Coding_Test_Project.Membership.ActivateEmailModel

<html>
<head>
    <title>Activate your Coding_Test_Project account</title>
</head>
<body>
    <p>@Model.DisplayName,</p>

    <p>We received a request to create a new account on Coding_Test_Project with your e-mail address.</p>

    <p>Click the link below to activate your account:</p>

    <p><a href="@Model.ActivateLink">@Model.ActivateLink</a></p>

    <p>If it wasn't you who requested this, you can ignore this email.</p>

    Thanks,
    The "Coding_Test_Project" Team
</body>
</html>